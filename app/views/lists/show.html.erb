<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container h-100 py-5">
    <h1 class="text-white"><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center text-center">
    <div class="col-8">
      <ul class="mt-3 list-group mb-3">
      <% @bookmarks.each do |bookmark| %>
        <li class="list-unstyled list-group-item">
          <h6><%= bookmark.comment %> - <%= bookmark.movie.title %></h6>
        </li>
      <% end %>
      </ul>
    </div>



    <div class="col-12">
      <%= link_to 'Back', lists_path %>
    </div>
  </div>
</div>
